@using Domain.Enums
@using Domain.Models
@model Payment

@{
	ViewBag.Title = "Payment Details";
}

<h2 class="display-5">Payment Details</h2>
<a class="btn btn-warning" asp-area="Admin" asp-controller="Payment" asp-action="Index">Back to List</a>

<div class="container py-5">
	<div class="card shadow-lg rounded-4 border-0">

		<div class="card-body p-5">
			<div class="row mb-4">
				<div class="col-md-6">
					<h5 class="fw-bold">Payment Details:</h5>
					<ul class="list-group list-group-flush">
						<li class="list-group-item">Trip Name: <strong>@Model.Booking.Trip.Title</strong></li>
						<li class="list-group-item">Booking Date: <strong>@Model.Booking.BookingDate</strong></li>
						<li class="list-group-item">Number of Participants: <strong>@Model.Booking.NumberOfParticipants</strong></li>
						<li class="list-group-item">Total Price: <strong>$@Model.Amount</strong></li>
						<li class="list-group-item">
							Booking Status:
							@if (@Model.Booking.Status == BookingStatus.Confirmed)
							{
								<span class="badge bg-success">Confirmed</span>
							}
							else if (@Model.Booking.Status == BookingStatus.Pending)
							{
								<span class="badge bg-warning">Pending</span>
							}
							else if (@Model.Booking.Status == BookingStatus.Completed)
							{
								<span class="badge bg-primary">Completed</span>
							}
							else if (@Model.Booking.Status == BookingStatus.Cancelled)
							{
								<span class="badge bg-danger">Cancelled</span>
							}
							else if (@Model.Booking.Status == BookingStatus.Refunded)
							{
								<span class="badge bg-info">Refunded</span>
							}
						</li>
						<li class="list-group-item">
							Payment Status:
							@if (@Model.Status == PaymentStatus.Paid)
							{
								<span class="badge bg-success">Paid</span>
							}
							else if (@Model.Status == PaymentStatus.Pending)
							{
								<span class="badge bg-warning">Pending</span>
							}
							else if (@Model.Status == PaymentStatus.Refunded)
							{
								<span class="badge bg-primary">Refunded</span>
							}
							else if (@Model.Status == PaymentStatus.Rejected)
							{
								<span class="badge bg-danger">Rejected</span>
							}
						</li>
					</ul>
				</div>
				<div class="col-md-6">
					<h5 class="fw-bold">Customer Information:</h5>
					<ul class="list-group list-group-flush">
						<li class="list-group-item">Name: <strong>@Model.ApplicationUser.FullName()</strong></li>
						<li class="list-group-item">Phone: <strong>@Model.ApplicationUser.PhoneNumber</strong></li>
						<li class="list-group-item">Email: <strong>@Model.ApplicationUser.Email</strong></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

