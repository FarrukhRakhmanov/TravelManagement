@using Domain.Models
@model StripeSettings

<h2>Stripe Configuration</h2>

<form asp-action="SaveStripeSettings" method="post">
	<div class="mb-3">
		<label class="form-label">Publishable Key</label>
		<input type="text" class="form-control" asp-for="PublishableKey">
		<span asp-validation-for="PublishableKey" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label class="form-label">Secret Key</label>
		<input type="text" class="form-control" asp-for="SecretKey">
		<span asp-validation-for="SecretKey" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary">Save</button>
</form>