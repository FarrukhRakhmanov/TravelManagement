@{
	ViewBag.Title = "About Us";
}

<link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />

<section class="about-hero text-center">
		<div class="container">
			<h1 class="display-4 fw-bold mb-4">About EasyTrip</h1>
			<p class="lead mx-auto" style="max-width: 800px;">
				Crafting extraordinary journeys since 2025, we're more than just a travel agency. We're storytellers, explorers, and passionate travelers dedicated to creating unforgettable experiences.
			</p>
		</div>
	</section>

	<section class="container py-5">
		<div class="row align-items-center">
			<div class="col-lg-6">
				<h2 class="mb-4">Our Journey</h2>
				<p class="text-muted">
					Founded in 2025 by a group of adventure enthusiasts, Easy Trip began with a simple dream: to transform travel from a mere vacation into a life-changing experience. What started as a small startup in a cozy office has now grown into a global travel community.
				</p>
				<p class="text-muted">
					We believe that travel is not about ticking destinations off a list, but about immersing yourself in new cultures, challenging your perspectives, and creating stories that last a lifetime.
				</p>
			</div>
			<div class="col-lg-6">
				<img src="~/images/photos/unsplash-3.jpg" alt="Our Story" class="img-fluid rounded-4 shadow-lg">
			</div>
		</div>
	</section>


	<section class="container-fluid bg-light py-5">
		<div class="container">
			<div class="row text-center">
				<div class="col-md-4 mb-4">
					<i class="bi bi-compass mission-icon"></i>
					<h3>Personalized Experiences</h3>
					<p class="text-muted">Tailored journeys that reflect your unique travel style and dreams.</p>
				</div>
				<div class="col-md-4 mb-4">
					<i class="bi bi-globe mission-icon"></i>
					<h3>Global Connections</h3>
					<p class="text-muted">Building bridges between cultures and creating meaningful travel experiences.</p>
				</div>
				<div class="col-md-4 mb-4">
					<i class="bi bi-people mission-icon"></i>
					<h3>Sustainable Tourism</h3>
					<p class="text-muted">Committed to responsible travel that respects local communities and environments.</p>
				</div>
			</div>
		</div>
	</section>

	<section class="container py-5">
		<h2 class="text-center mb-5">Meet Our Team</h2>
		<div class="row">
			<div class="col-md-4 mb-4">
				<div class="card team-member-card text-center p-4">
					<img src="~/images/avatars/avatar-2.jpg" class="card-img-top rounded-circle mx-auto mb-3" style="width: 200px; height: 200px; object-fit: cover;">
					<h4>Sarah Thompson</h4>
					<p class="text-muted">Founder & CEO</p>
				</div>
			</div>
			<div class="col-md-4 mb-4">
				<div class="card team-member-card text-center p-4">
					<img src="~/images/avatars/avatar-3.jpg" class="card-img-top rounded-circle mx-auto mb-3" style="width: 200px; height: 200px; object-fit: cover;">
					<h4>Mike Rodriguez</h4>
					<p class="text-muted">Chief Experience Officer</p>
				</div>
			</div>
			<div class="col-md-4 mb-4">
				<div class="card team-member-card text-center p-4">
					<img src="~/images/avatars/avatar-4.jpg" class="card-img-top rounded-circle mx-auto mb-3" style="width: 200px; height: 200px; object-fit: cover;">
					<h4>Emily Chen</h4>
					<p class="text-muted">Head of Sustainable Tourism</p>
				</div>
			</div>
		</div>
	</section>

	<section class="container values-section py-5 my-2">
		<h2 class="text-center mb-5">Our Core Values</h2>
		<div class="row">
			<div class="col-md-3 text-center">
				<div class="p-4">
					<i class="bi bi-heart-fill text-danger fs-2 mb-3"></i>
					<h4>Passion</h4>
					<p class="text-muted">We are driven by our love for travel and exploration.</p>
				</div>
			</div>
			<div class="col-md-3 text-center">
				<div class="p-4">
					<i class="bi bi-shield-check text-success fs-2 mb-3"></i>
					<h4>Integrity</h4>
					<p class="text-muted">Transparency and honesty in every interaction.</p>
				</div>
			</div>
			<div class="col-md-3 text-center">
				<div class="p-4">
					<i class="bi bi-globe2 text-primary fs-2 mb-3"></i>
					<h4>Respect</h4>
					<p class="text-muted">Honoring diverse cultures and environments.</p>
				</div>
			</div>
			<div class="col-md-3 text-center">
				<div class="p-4">
					<i class="bi bi-star-fill text-warning fs-2 mb-3"></i>
					<h4>Excellence</h4>
					<p class="text-muted">Delivering exceptional service and experiences.</p>
				</div>
			</div>
		</div>
	</section>
	