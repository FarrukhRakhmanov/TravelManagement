@using Domain.Models
@model List<Trip>
@{
	ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero-section">
	<div class="container mb-4">
		<div class="row align-items-center">
			<div class="col-md-6">
				<h1>Explore the World with Us</h1>
				<p>Discover amazing destinations and book your dream vacation today.</p>
			</div>
			<div class="col-md-6">
				<img src="~/images/hero-section/hero-image.jpg" class="card-img-top rounded" alt="Travel" class="img-fluid">
			</div>
		</div>
	</div>
</section>

<div class="row pb-3">
	<h2 class="text-center">Popular Travel Packages</h2>
	@foreach (var trip in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card border-0 p-3 shadow border-top border-5 rounded">
						<img src="@trip.ImageUrl" style="height: 150px;" class="card-img-top rounded"/>
						<div class="card-body pb-0">
							<div class="pl-1">
								<p class="card-title h5 text-dark opacity-75 text-uppercase">
									@trip.Title
								</p>
								<p class="card-title text-warning">
									@trip.Destination
								</p>
								<p class="card-title text-warning">
									Style: @trip.Style
								</p>
							</div>
							<div class="pl-1">
								<p class="card-title h5 text-dark opacity-75 text-uppercase">
									@if (@trip.NumberOfDays > 1)
									{
										@trip.NumberOfDays

										<span>Days</span>
									}
									else
									{
										@trip.NumberOfDays

										<span> Day</span>
									}
								</p>
							</div>
							<div class="pl-1">
								@if (@trip.OriginalPricePerPerson > 0)
								{
									<div class="row col-12 d-flex justify-content-between mb-2">
										<div class="col-6">
											<span class="text-bold opacity-75 mb-0">
												Was
												<span class="text-decoration-line-through">
													$@trip.OriginalPricePerPerson
												</span>
											</span>
										</div>
										<div class="col-6 text-end">
											<span class="opacity-75" style="color: red; font-weight: bold;">
												Now $@trip.DiscountPricePerPerson
											</span>
										</div>
									</div>
								}
								else
								{

									<div class="row col-12 d-flex justify-content-between mb-2">
										<div class="col-6">
										</div>
										<div class="col-r">
											<span class="opacity-75" style="color: red; font-weight: bold;">
												From $@trip.DiscountPricePerPerson
											</span>
										</div>
									</div>
								}
							</div>
						</div>
						<div>
							<a asp-action="Details" asp-route-tripId="@trip.Id" class="btn btn-primary bg-gradient border-0 form-control">
								Details
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
	<div class="d-flex justify-content-center align-items-center">
		<a asp-action="GetAll" asp-controller="Home" class="btn btn-success text-decoration-none">
			View All Trips
		</a>
	</div>
</div>
